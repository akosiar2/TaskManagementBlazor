<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    @if (Visible)
    {
        <div class="toast align-items-center text-white bg-@Type border-0 show" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    @Message
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="Hide"></button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public string Type { get; set; } = "primary"; // success, danger, warning, info...
    public bool Visible { get; set; }

    public void Show(string message, string type = "primary")
    {
        Message = message;
        Type = type;
        Visible = true;
        StateHasChanged();

        // Auto-hide after 3 seconds
        _ = Task.Run(async () =>
        {
            await Task.Delay(3000);
            Hide();
        });
    }

    public void Hide()
    {
        Visible = false;
        InvokeAsync(StateHasChanged);
    }
}